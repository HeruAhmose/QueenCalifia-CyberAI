{
  "uid": "qc-rl-budget",
  "title": "QueenCalifia Rate Limit & Budget",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "panels": [
    {
      "type": "timeseries",
      "title": "Denials / sec (by scope)",
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      },
      "targets": [
        {
          "expr": "sum(rate(qc_rate_limit_denied_total[1m])) by (scope)"
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 12,
        "h": 8
      }
    },
    {
      "type": "timeseries",
      "title": "Budget cost / sec (top routes)",
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      },
      "targets": [
        {
          "expr": "topk(10, sum(rate(qc_budget_cost_total[1m])) by (route))"
        }
      ],
      "gridPos": {
        "x": 12,
        "y": 0,
        "w": 12,
        "h": 8
      }
    }
  ],
  "time": {
    "from": "now-30m",
    "to": "now"
  }
}